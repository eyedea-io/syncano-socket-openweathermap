{
  "name": "syncano-socket-openweathermap",
  "version": "0.1.0",
  "license": "MIT",
  "main": "./.components/index.js",
  "dependencies": {
    "axios": "^0.15.3",
    "js-yaml": "^3.10.0",
    "react": "^16.0.0",
    "syncano-client": "^0.2.6-3",
    "syncano-server": "beta"
  },
  "scripts": {
    "build": "webpack",
    "test": "npm run test:unit && npm run test:e2e",
    "test:base": "cross-env NODE_ENV=test nyc --produce-source-map=true mocha --reporter spec --require babel-register",
    "test:unit": "npm run test:base -- test/unit/**/*.js",
    "test:e2e": "npm run test:base -- --timeout 4000 --slow 1800 test/e2e/*.js",
    "test:coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "standard --fix --env mocha --parser babel-eslint",
    "format": "prettier --write --single-quote --no-semi --no-bracket-spacing *.js {src,test}/**/*.js"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "npm run format",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.1.2",
    "husky": "^0.14.3",
    "lint-staged": "^4.3.0",
    "mocha": "^3.5.3",
    "mockery": "^2.1.0",
    "npm-run-all": "^4.1.1",
    "nyc": "^11.2.1",
    "prettier": "^1.7.4",
    "sinon": "^3.3.0",
    "standard": "^10.0.3",
    "syncano-test": "^0.3.2",
    "webpack": "^3.8.1"
  }
}
